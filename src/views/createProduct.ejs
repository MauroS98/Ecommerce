            <div class="col-12">
            <h2 class="products-title">Formulario de creación de productos</h2>
            </div>
        </div>
        <div class="col-12">
            <form action="crear-producto" method="post" enctype="multipart/form-data" >
                <div class="row product-detail">
                    <div class="col-12 col-md-6">
                        <label for="name" class="form-label">Nombre del producto:</label>
                        <input type="text" id="name" name="name" placeholder="" class="form-input">
                    </div>
                    <div class="col-12 col-md-6">
                        <label for="price" class="form-label">Precio del producto:</label>
                        <input type="number" id="price" name="price" placeholder= "" class="form-input">
                    </div>
                    <div class="col-12  ">
                        <label for="description" class="form-label">Descipción:</label>
                        <textarea name="description" id="description" class="form-input"></textarea>
                    </div>
                    <div class="col-12 col-md-6">
                        <label for="image" class="form-label">image:</label>
                        <input type="file" id="discount" name="image" placeholder= "" class="form-input">
                    </div>
                    <div class="col-12 col-md-6">
                        <label for="image" class="form-label">image-secondary:</label>
                        <input type="file" id="discount" name="image-secondary" placeholder= "" class="form-input">
                    </div>
                  
                    <div class="col-12 col-md-6">
                        <label for="category" class="form-label">Categoría:</label>
                        <select name="category" id="category" class="form-input"  >
                            <option  value="" selected hidden>seleccionar</option>
                            <option  value="gabinetes" >gabinetes</option>
                            <option value="Procesadores">Procesadores</option>
                            <option value="Memorias Ram">Memorias Ram</option>
                            <option value="Placas de Video">Placas de Video</option>
                        </select>
                    </div>
                    <div class="col-12">
                        <button type="submit" class="buy-now-button-btn-primary">crear producto</button>
                    </div>
                </div>
            </form>
