<% products.forEach(p=> { %>
    <% if (p.id) { %>
        <div class="product-list-item">
            <div>
                <img src="/images/productos/<%= p.image %>" alt="">
            </div>
            <div class="list-container">
                <ul>
                    <li>ID: <%= p.id %>
                    </li>
                    <li>Nombre: <%= p.name %>
                    </li>
                    <li>Categor√≠a: <%= p.category %>
                    </li>
                    <li>Precio: $<%=toThousand(p.price) %>
                    </li>
                </ul>
                <div class="button-group">
                    <a href="/products/productDetail">Detalle</a>
                    <a href="/admin/editar-producto/:id<%= p.id %>">Editar</a>
                    <form class="delete-form" action="/admin/eliminar-producto/<%= p.id %>?_method=DELETE" method="post"
                        enctype="multipart/form-data">
                        <label for="delete-checkbox<%= p.id %>">Eliminar</label>
                        <input type="checkbox" id="delete-checkbox<%= p.id %>" class="delete-checkbox">
                        <div class="alert-delete">
                            <div class="alert-card-delete">
                                <h4>Seguro desea eliminar este producto?</h4>
                                <button type="submit" class="delete-button">Eliminar</button>
                                <label for="delete-checkbox<%= p.id %>">Cancelar</label>
                            </div>

                        </div>
                    </form>
                </div>
            </div>
            <% } %>
        </div>
        <% }) %>