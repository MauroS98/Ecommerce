
<div class="container mt-5">
    <h2 class="mb-4">Editar Producto</h2>

    <form class="formUpdateProduct">
        <div class="form-group-">
             <label >ID: <%= product.id %></label> 
        </div>
        <div class="form-group">
            <label for="nombre">Nombre del producto</label>
            <input type="text" class="form-control" id="nombre" placeholder="Nombre del Producto" value="<%= product.name %>">
        </div>
        
        <div class="form-group">
            <label for="precioLista">Precio</label>
            <input type="text" class="form-control" id="precioLista" placeholder="Precio de Lista" value="$<%= product.price %>">
        </div>
        <div class="form-group">
            <label for="imagenes">Cargar Imágenes</label>
            <input type="file" class="form-control-file" id="imagenes" multiple>
        </div>
        <div class="form-group">
            <label for="especificaciones">Descripcion</label>
            <textarea class="form-control" ><%= product.description %></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Guardar Datos</button>
    </form>
</div>


<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.18/summernote-bs4.min.js"></script>
<script>
    
    $('#especificaciones').summernote({
        placeholder: 'Escribe aquí las especificaciones...',
        tabsize: 2,
        height: 150
    });
</script>
