
<div class="container row m-0 justify-content-center ">
    <h2 class="mb-4">Editar Producto</h2>

    <form class="form-p" action="editar-producto ?_method=PUT" method="post" enctype="multipart/form-data">
        <div class="form-group ">
             <!-- <label >ID: </label>  -->
            
        </div>
        <div class="form-group col-auto p-15 text-center" >
            <label for="nombre"></label>
            <input type="text" class="form-control col-md-6 " id="nombre" placeholder="Nombre del Producto" value="<%= p.name %>">
        </div>
        
        <div class="form-group">
            <label for="precioLista"></label>
            <input type="text" class="form-control col-md-6" id="precioLista" placeholder="Precio de Lista" value="<%= p.price %>">
        </div>
        <div class="form-group">
            <label for="imagenes">Cargar Imágenes</label>
            <input type="file" name="images" class="form-control-file col-md-6" id="imagenes" multiple  value="<%= p.images %>">
        </div>
        <div class="form-controlcol-md-6" >
            <label for="especificaciones"><%= p.description %></label>
            <textarea class="form-control col-md-6"></textarea>
        </div>
        <div class="form-label col-md-6">
            <label for="category" class="form-label">Categoría:</label>
            <select class="select" name="category" id="category" class="form-control col-md-6"">
                <option value="" selected hidden>seleccionar</option>
                <option value="gabinetes">gabinetes</option>
                <option value="Procesadores">Procesadores</option>
                <option value="Memorias Ram">Memorias Ram</option>
                <option value="Placas de Video">Placas de Video</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary height-0">Guardar Datos</button>
    </form>
</div>


<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.18/summernote-bs4.min.js"></script>
<script>
    
    $('#especificaciones').summernote({
        placeholder: 'Escribe aquí las especificaciones...',
        tabsize: 2,
        height: 150
    });
</script>
