<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
        integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
    <title>Quantum PC</title>
</head>

<body>
    <%- include('./partials/header') %>

        <main>
            <h2 class="products-tittle">GABINETES</h2>
            <section class="cards-container">
                <% productsGabinetes.forEach(p=> { %>
                    <article class="product-card-no-swiper">
                        <div class="img-content">
                            <img src="/images/<%= p.image %>" alt="img-producto">
                        </div>
                        <div class="product-info">
                            <h3>
                                <%= p.name %>
                            </h3>
                            <h2 class="price">
                                $<%= toThousand(p.price) %>
                            </h2>
                        </div>
                    </article>
                    
                    <% }) %>
                </section>
                <h2 class="products-tittle">PLACAS DE VIDEO</h2>
                <section class="cards-container">
                    <% productsGPU.forEach(p=> { %>
                        <article class="product-card-no-swiper">
                            <div class="img-content">
                                <img src="/images/<%= p.image %>" alt="img-producto">
                            </div>
                            <div class="product-info">
                                <h3>
                                    <%= p.name %>
                                </h3>
                                <h2 class="price">
                                    $<%= toThousand(p.price) %>
                                </h2>
                            </div>
                        </article>
                        
                        <% }) %>
                    </section>
                    <h2 class="products-tittle">PROCESADORES</h2>
                    <section class="cards-container">
                        <% productsProcesadores.forEach(p=> { %>
                            <article class="product-card-no-swiper">
                                <div class="img-content">
                                    <img src="/images/<%= p.image %>" alt="img-producto">
                                </div>
                                <div class="product-info">
                                    <h3>
                                        <%= p.name %>
                                    </h3>
                                    <h2 class="price">
                                        $<%= toThousand(p.price) %>
                                    </h2>
                                </div>
                            </article>
                            
                            <% }) %>
                        </section>
                        <h2 class="products-tittle">MEMORIAS RAM</h2>
                        <section class="cards-container">
                            <% productsMemoriasRam.forEach(p=> { %>
                                <article class="product-card-no-swiper">
                                    <div class="img-content">
                                        <img src="/images/<%= p.image %>" alt="img-producto">
                                    </div>
                                    <div class="product-info">
                                        <h3>
                                            <%= p.name %>
                                        </h3>
                                        <h2 class="price">
                                            $<%= toThousand(p.price) %>
                                        </h2>
                                    </div>
                                </article>
                                
                                <% }) %>
                            </section>

        </main>
        <%- include('./partials/footer') %>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
                crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
            <script>
                var swiper1 = new Swiper(".mySwiper", {
                    slidesPerView: 2,
                    spaceBetween: 10,
                    freeMode: true,
                    //loop: true,
                    navigation: {
                        nextEl: ".swiper-button-next",
                        prevEl: ".swiper-button-prev",
                    },
                    breakpoints: {
                        426: {
                            slidesPerView: 3,
                            spaceBetween: 10,
                        },
                        769: {
                            slidesPerView: 5,
                            spaceBetween: 10,
                        }
                    }
                });
            </script>
</body>

</html>