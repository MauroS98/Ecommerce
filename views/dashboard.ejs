</head>

 <body> 
    
    <div class="area"></div>
    <nav class="main-menu">
        <ul>
            <li>
                <a href="/">
                    <i class="fa fa-home fa-2x"></i>
                    <span class="nav-text">
                        home
                    </span>
                </a>

            </li>
            <li class="has-subnav">
                <a href="#">
                    <i class="fa fa-search" aria-hidden="true"></i>
                    <span class="nav-text">
                       buscar
                    </span>
                </a>

            </li>
            <li class="has-subnav">
                <a href="#">
                    <i class="fa fa-id-card" aria-hidden="true"></i>
                    <span class="nav-text">
                       usuarios
                    </span>
                </a>

            </li>
            <li class="has-subnav">
                <a href="../images">
                    <i class="fa fa-camera-retro fa-2x"></i>
                    <span class="nav-text">
                         Photos
                    </span>
                </a>

            </li>
            <li>
                <a href="/product.detail.controller">
                    <i class="fa fa-server" aria-hidden="true"></i>
                    <span class="nav-text">
                         crear producto
                    </span>
                </a>
            </li>
            <li>
                <a href="./productDetail.ejs">
                    <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                    <span class="nav-text">
                          editar producto
                    </span>
                </a>
            </li>
        <ul class="logout">
            <li>
                <a href="/">
                    <i class="fa fa-power-off fa-2x"></i>
                    <span class="nav-text">
                        salir
                    </span>
                </a>
            </li>
        </ul>
    </nav>
    <div class="dashboard-admin-content p-5 mx-auto">
        <h1 class="text-center text-danger my-4">Crear Producto</h1>
  
        <a href="/admin/productos" class="btn btn-primary mb-8">Volver al listado</a>
  
        <div class="card container-das p-5" style="width:70rem;">
          <form action="" class="row justify-content-between">
  
  
            <div class="mb-3 col-6">
              <label class="form-label">Titulo</label>
              <input type="text" name="title" class="form-control">
            </div>
  
            <div class="mb-3 col-6">
              <label class="form-label">Precio</label>
              <input type="number" name="price" class="form-control">
            </div>
  
            <div class="mb-3 form-floating col-6">
              <textarea class="form-control" name="description" placeholder="Colocar la descripción del curso"></textarea>
              <label>Descripción</label>
            </div>
  
         
  
  
            <div class="mb-3 row p-0 mx-auto">
  
              <h3>Sección</h3>
              <hr>
              <div class="form-check col-4">
                <input class="form-check-input" id="new" type="radio" name="section" checked>
                <label class="form-check-label" for="sale">
                  Oferta
                </label>
              </div>
  
              <div class="form-check col-4">
                <input class="form-check-input" type="radio" id="new" checked name="section">
                <label class="form-check-label" for="new">
                  Nuevo
                </label>
              </div>
  
              <div class="form-check col-4">
                <input class="form-check-input" type="radio" id="free" name="section">
                <label class="form-check-label" for="free">
                  Gratis
                </label>
              </div>
            </div>
  
            <hr>
            <div class="mb-3 form-check form-switch col-4">
              <input class="form-check-input" type="checkbox" id="available" name="available" checked>
              <label class="form-check-label" for="available">Disponible</label>
            </div>
  
            <div class="mb-3 col-8">
              <label for="image" class="form-label">Small file input example</label>
              <input class="form-control form-control-sm" id="image" type="file" name="image">
            </div>
  
            <button type="submit" class="mb-3 btn btn-success col-4">Crear Producto</button>
          </form>
  
  
        </div>
   
     <script src="../public/js/funciones/dashboard.js"></script>
</body> 

</html>

